    <StandardHierarchyLevel>
      <number>7</number>
      <description>Component</description>
    </StandardHierarchyLevel>
    <StatementCodes>
      <StatementCode>CCSS.ELA-Literacy.SL.11-12.1c</StatementCode>
    </StatementCodes>
    <Statements>
      <Statement>Propel conversations by posing and responding to questions that probe reasoning and evidence; ensure a hearing for a full range of positions on a topic or issue; clarify, verify, or challenge ideas and conclusions; and promote divergent and creative perspectives.</Statement>
    </Statements>
    <GradeLevels>
      <GradeLevel>11-12</GradeLevel>
    </GradeLevels>
